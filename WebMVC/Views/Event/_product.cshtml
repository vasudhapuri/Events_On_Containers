@model WebMVC.Models.EachEvent




<form asp-controller="Cart" asp-action="AddToCart">
    <img class="esh-catalog-thumbnail" src="@Model.PictureUrl" />
    <input class="esh-catalog-button" type="submit" value="[ REGISTER ]" />
    <div class="esh-catalog-name">
        <span>@Model.EventName</span>
    </div>
   @*  <div class="esh-catalog-price">
        <span>@Model.Price.ToString("N2")</span>
    </div> *@
    @if (Model.Price == 0)
    {
        <span class="esh-catalog-price1">FREE</span>
    }

    else
    {
        <span class="esh-catalog-price">@Model.Price.ToString("N2")</span>
    }
    
    <div class="esh-catalog-date">
        <span>@Model.Date</span>
    </div>
    <div class="esh-catalog-location">
        <span>@Model.Address</span>
    </div>
    <div class="esh-catalog-likes">
        <span >&hearts;  @Model.Likes</span>
        </div>
        
    <input type="hidden" asp-for="@Model.EventType" name="type" />
    <input type="hidden" asp-for="@Model.TypeId" name="typeId" />
     <input type="hidden" asp-for="@Model.EventLocation" name="location" />
    <input type="hidden" asp-for="@Model.LocationId" name="locationId" /> 
    <input type="hidden" asp-for="@Model.Description" name="description" />
    <input type="hidden" asp-for="@Model.Id" name="id" />
    <input type="hidden" asp-for="@Model.EventName" name="eventname" />
    <input type="hidden" asp-for="@Model.PictureUrl" name="pictureUrl" />
    <input type="hidden" asp-for="@Model.Price" name="price" />
</form>